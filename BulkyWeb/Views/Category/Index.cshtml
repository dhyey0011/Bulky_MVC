
@model List<Category> 
<partial name="_Notification" />
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Category list
            </h2>
        </div>
        <div class="col-6">
            <h2 class="text-primary">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-cirle"></i> Create New Category
                </a> 

            </h2>
        </div>

    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderBy(e=> e.DisplayOrder))
        {
        <tr>
            <td>
                @obj.Name
             </td>
             <td>
                @obj.DisplayOrder
             </td>
             <td>
                 <div class="w-75 btn-group" role="group">
                     <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.CategoryId" class="btn btn-primary mx-2">
                         <i class="bi bi-pencil-square"></i> Edit
                     </a>
                 </div>
             </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.CategoryId" class="btn btn-danger mx-2">
                            <i class="bi bi-trash"></i>Delete
                        </a>
                    </div>
                </td>
        </tr>
        }
    </tbody>

</table>
